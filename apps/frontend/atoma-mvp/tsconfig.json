{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"entry-client.jsx",
		"entry-server.jsx"
	],
	"exclude": ["node_modules"]
}
